    <link rel="stylesheet" href="/style.css">
  </head>
  <body>

     <nav class="navbar navbar-expand-lg navbar-dark py-3 ">
        <div class="container">
          <a class="navbar-brand" href="#">Service Officer</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item ">
                <a class="nav-link " href="/">Home</a>
              </li>
              
              
              <li class="nav-item">
                <a class="nav-link acti" href="/services">Services</a>
              </li>
              <li class="nav-item ">
                <a class="nav-link " href="/requestservice">RequestedService</a>
              </li>
              <li class="nav-item ">
                <a class="nav-link" href="/repairrequest">Repairing</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>



    <div class="service-page">
      <div class="container py-5 p-3 ">
        <h1 class="text-center pb-4">Services</h1>
        <a href="/services_add" class="btn btn-primary m-3 btn-lg">Add a new Services</a>
        <table class="table">
          <tr>
            <th>Id</th>
            <th>Service Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
      
          </tr>
          {{#each hos}}
          <tr>
            <td>{{this.H_id}}</td>
            <td>{{this.sname}}</td>
            <td>{{this.scategories}}</td>
            <td style="max-width:450px">{{this.sdescription}}</td>
      
            <td style="min-width:150px">
              <a href="/edit-services-form/{{this.H_id}}" class="btn btn-info btn-sm">Edit</a>
              <a onclick="alert('Are you sure')" href="/delete-services/{{this.H_id}}" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          {{/each}}
        </table>
      </div>
    </div>
    <footer>
      <p class="text-center p-2 bg-dark text-white mb-0">All copyright &copy; reseved 2021</p>
    </footer>
     
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
